ARG foreignType

FROM us.icr.io/dia-registry/devops/build-122:latest as build

WORKDIR $GOPATH/src/
COPY cmd/foreignscraper .

RUN go mod tidy && GOOS=linux GOARCH=amd64 CGO_ENABLED=0 go install

FROM gcr.io/distroless/base

COPY --from=build /go/bin/foreignscraper /bin/foreignscraper
COPY --from=build /config/ /config/

CMD ["foreignscraper"]
